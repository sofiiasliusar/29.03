#:set color_txt_d "#341109"
#:set color_btn_bg "#F7D4F6"
#:set color_btn_bg_pr "#F7D4F6"
#:set color_bg "#98CA32"
#:set color_a "#FD3A0F"
#:set color_b "#9A0794"

<ButtonMenu@Button>:
    size_hint_y: 0.3
    font_size: "30sp"
    color: color_txt_d
    background_color: color_btn_bg
    background_normal: color_btn_bg
    on_release: self.background_color = color_btn_bg
    background_down: color_btn_bg_pr
    on_press: self.background_color = color_btn_bg_pr
    font_name: 'assets/Kanit-Regular.ttf'

<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'

        Label:
            text: 'Cosmo Adventure'
            font_name: 'assets/Kanit-Regular.ttf'
            font_size: '30dp'
            color: 'red'
            size_hint_y: 0.2


        Image:
            source: 'assets/1.jpg'
            size_hint_y: .3
            allow_stretch: True

        Widget:
            size_hint_y: 0.3

        ButtonMenu:
            text: "Start"
            on_press: root.screenmanager.current = 'game'
        ButtonMenu:
            text: "Lider Board"
        ButtonMenu:
            text: "Settings"

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: 'score: ' + str(root.points)
                font_name: 'assets/Kanit-Regular.ttf'
                font_size: '30dp'
                color: color_a

        FloatLayout:
            size_hint_y: 0.8
            Donut:
                id: donut
        BoxLayout:
            size_hint_y: 0.1

<Donut>
    allow_stretch: True
    size_hint_y: None, None
    size: '200dp', '200dp'
    center: self.parent.center

    #dp = screen size/60*0.8